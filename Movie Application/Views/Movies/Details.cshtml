@model Movie_Application.Models.Movie

@{
    ViewData["Title"] = "Movie Details View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date Added: @Model.DateInserted.ToLongDateString()</li>
    <li>Stock: @Model.Stock</li>
</ul>
 