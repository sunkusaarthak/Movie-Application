@model Movie_Application.ViewModel.MoviesViewModel
@{
    ViewData["Title"] = "Movies Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.MoviesList.Any())
{
    @Html.ActionLink("Add Movie", "MovieForm", "Movies");
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.MoviesList)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)
                    </td>
                    <td>
                        @movie.Genre.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have Movies Yet!</p>
}
