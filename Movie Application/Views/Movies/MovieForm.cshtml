@model Movie_Application.ViewModel.MovieFormViewModel
@{
    ViewData["Title"] = "MovieForm";
}

<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</head>

<h1>MovieForm</h1>

@using (Html.BeginForm("Save", "Movies"))
{
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name)
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Stock)
        @Html.TextBoxFor(m => m.Movie.Stock)
        @Html.ValidationMessageFor(m => m.Movie.Stock)
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0: dd-mm-yyyy}")
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>

    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId,
                new SelectList(Model.GenreList, "Id", "Name"), "Select a Genre")
        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>

    @Html.HiddenFor(c => c.Movie.Id);
    @Html.AntiForgeryToken();
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
}

